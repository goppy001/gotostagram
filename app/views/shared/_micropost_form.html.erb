<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/jpg,image/png' %>
  </span>
  <div class="field">
    <%= f.text_area :content, placeholder: "コメント" %>
  </div>
  <%= f.submit "シェアする", class: "btn btn-primary", disabled: false%>
<% end %>

  <script type="text/javascript">
    $('#micropost_pitcture').bind('change'), function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert("ファイルの最大容量は5MB未満です。画像を選択し直してください");
      }
    });
  </script>
