<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <div class="namefield">
        <%= gravatar_for @user %>
        <div class="username">
          <%= @user.name %>
        </div>
        <% if current_user?(@user) %>
          <%= link_to "プロフィールを編集", edit_user_path(current_user) %>
        <% else %>
          <%= render 'follow_form' %>
        <% end %>
      </section>
      <table>
      <tr>
       <th align="center"><%= render 'shared/user_info_default' %></th>
       <th align="center"><%= render 'shared/stats_default' %></th>
      </tr>
      </table>
      </div>
  </aside>
</div>

<div class="row">
   <div id="posted_contents">
     <div class="col-md-8">
         <%= render @microposts %>
    </div>
  </div>
</div>

 
